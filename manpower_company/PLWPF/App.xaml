<Application x:Class="PLWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PLWPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="DatePicker">
            <Setter Property="DisplayDate" Value="1,1,1990"/>
        </Style>
        <LinearGradientBrush x:Key="BackGround_window" EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FF3C5EF5" Offset="0.065"/>
            <GradientStop Color="#FFB7DBE6" Offset="0.391"/>
            <GradientStop Color="#FFB7E6FF" Offset="0.768"/>
            <GradientStop Color="#FF9AC3D8" Offset="0.931"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="smallButton" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0.024"/>
            <GradientStop Color="White" Offset="0.948"/>
            <GradientStop Color="#FF828282" Offset="0.312"/>
        </LinearGradientBrush>
    </Application.Resources>
</Application>
